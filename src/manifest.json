{
  "manifest_version": 2,
  "name": "KH13.com, for KINGDOM HEARTS",

  "version": "1.1.0",
  "description": "A companion Chrome extension for KH13.com.",
  "icons": { "16": "images/icon-16.png", "128": "images/icon-128.png" },

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "KH13.com"
  },

  "background": {
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self' https://www.google.com https://ssl.google-analytics.com; object-src 'self'",
  "homepage_url": "http://kh13.com/",
  "permissions": [
    "notifications",
    "https://www.google.com/*",
    "https://ssl.google-analytics.com/*",
    "unlimitedStorage"
  ],
  "short_name": "KH13.com"
}
